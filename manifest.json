{
  "name": "Modisfill",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Estensione dedicata ai dipendenti Modis e Adecco che vogliono semplificare e automatizzare la compilazione del proprio WTC",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "*://candidate.it.modis.com/*",
    "*://candidate.modisitalia.it/*",
    "*://candidate.adecco.it/*",
    "storage",
    "notifications"
  ],
  "web_accessible_resources": [
    "data.json"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://candidate.it.modis.com/*",
        "*://candidate.modisitalia.it/*",
        "*://candidate.adecco.it/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}